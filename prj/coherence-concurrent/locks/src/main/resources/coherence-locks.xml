<cache-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns="http://xmlns.oracle.com/coherence/coherence-cache-config"
              xsi:schemaLocation="http://xmlns.oracle.com/coherence/coherence-cache-config coherence-cache-config.xsd">

  <defaults>
    <scope-name>$SYS</scope-name>
  </defaults>

  <caching-scheme-mapping>
    <cache-mapping>
      <cache-name>locks-*</cache-name>
      <scheme-name>locks</scheme-name>
    </cache-mapping>
  </caching-scheme-mapping>

  <caching-schemes>

    <distributed-scheme>
      <scheme-name>locks</scheme-name>
      <service-name>LocksPartitionedCache</service-name>
      <member-listener>
        <class-name>com.oracle.coherence.concurrent.locks.internal.LockHolderCleaner</class-name>
      </member-listener>
      <backing-map-scheme>
        <local-scheme/>
      </backing-map-scheme>
      <autostart>true</autostart>
    </distributed-scheme>

  </caching-schemes>
</cache-config>