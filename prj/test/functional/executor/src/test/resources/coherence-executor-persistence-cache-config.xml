<cache-config
  xmlns="http://xmlns.oracle.com/coherence/coherence-cache-config"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.oracle.com/coherence/coherence-cache-config coherence-cache-config.xsd">

  <defaults>
    <scope-name>$SYS</scope-name>
    <serializer>
      <instance>
        <class-name>com.tangosol.io.pof.ConfigurablePofContext</class-name>
        <init-params>
          <init-param>
            <param-type>String</param-type>
            <param-value>${coherence.pof.config coherence-executor-pof-config.xml}</param-value>
          </init-param>
        </init-params>
      </instance>
    </serializer>
  </defaults>

  <interceptors>
    <interceptor>
      <instance>
        <class-name>com.oracle.coherence.concurrent.executor.internal.LifecycleEventInterceptor</class-name>
      </instance>
    </interceptor>
  </interceptors>

  <caching-scheme-mapping>
    <cache-mapping>
      <cache-name>ClusteredExecutorService.tasks</cache-name>
      <scheme-name>distributed-scheme-for-clustered-executorservice</scheme-name>
      <interceptors>
        <interceptor>
          <name>task-interceptor</name>
          <instance>
            <class-name>com.oracle.coherence.concurrent.executor.internal.ClusteredTaskInterceptor</class-name>
            <init-params>
              <init-param>
                <param-type>String</param-type>
                <param-value>{service-name}</param-value>
              </init-param>
            </init-params>
          </instance>
        </interceptor>
      </interceptors>
    </cache-mapping>
    <cache-mapping>
      <cache-name>ClusteredExecutorService.*</cache-name>
      <scheme-name>distributed-scheme-for-clustered-executorservice</scheme-name>
    </cache-mapping>
  </caching-scheme-mapping>

  <caching-schemes>
    <distributed-scheme>
      <scheme-name>distributed-scheme-for-clustered-executorservice</scheme-name>
      <service-name>DistributedCacheForClusteredExecutorService</service-name>
      <backing-map-scheme>
        <local-scheme/>
      </backing-map-scheme>

      <persistence>
        <environment>simple-bdb-environment</environment>
      </persistence>
      <partitioned-quorum-policy-scheme>
        <recover-quorum>1</recover-quorum>
      </partitioned-quorum-policy-scheme>

      <autostart>true</autostart>
      <interceptors>
        <interceptor>
          <name>live-object-interceptor</name>
          <instance>
            <class-name>com.oracle.coherence.concurrent.executor.internal.LiveObjectEventInterceptor</class-name>
          </instance>
        </interceptor>
      </interceptors>
    </distributed-scheme>

    <proxy-scheme>
      <scheme-name>proxy-scheme</scheme-name>
      <service-name>TcpProxyService</service-name>

      <acceptor-config>
        <tcp-acceptor>
          <local-address>
            <address system-property="coherence.executor.extend.address">127.0.0.1</address>
            <port system-property="coherence.executor.extend.port">9099</port>
          </local-address>
        </tcp-acceptor>
      </acceptor-config>

      <autostart system-property="coherence.executor.extend.enabled">false</autostart>
    </proxy-scheme>
  </caching-schemes>
</cache-config>
